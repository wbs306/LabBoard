<!doctype html>
<html>

<head>
  <title>LabBoard 看板</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/qweather-icons@1.1.0/font/qweather-icons.css">
  <link rel="stylesheet" href={{ url_for("static", filename="board.css") }}>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src={{ url_for("static", filename="board.js") }}></script>
</head>

<body>
  <div id="main">
    <div class="container-fluid">
      <div class="row row-cols-3">
        <div class="col">
          <div class="card" id="temp-card">
            <div class="card-body">
              <div class="card-info">
                <h5 class="card-title">温度</h5>
                <p class="card-text">{{ sensor_data["temperature"][-1] }} <span>°C</span></p>
              </div>
              <div class="line-chart"></div>
            </div>
          </div>
          <div class="card" id="humidity-card">
            <div class="card-body">
              <div class="card-info">
                <h5 class="card-title">相对湿度</h5>
                <p class="card-text">{{ sensor_data["humidity"][-1] }} <span>%</span></p>
              </div>
              <div class="line-chart"></div>
            </div>
          </div>
        </div>
        <div class="col">
          <div id="clock">
            <p id="time"></p>
            <p id="week"></p>
          </div>
          <div id="weather">
            <i class="qi-104"></i>
            <span>多云</span>
            <p>6 ~ 12 °C</p>
            <p id="body-temp">体感温度: 9°C</p>
          </div>
        </div>
        <div class="col">
          <ul class="list-group">
            <li class="list-group-item">
              <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
              学习
            </li>
            <li class="list-group-item">
              <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
              学习
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    setInterval(clock, 1000);

    let t = {{ sensor_data["temperature"] | safe }};
    setGraphic("#temp-card", t, {
      "fill": "#ff980030",
      "line": "#ff9800",
      "line_width": 3,
      "linecap": "round"
    });

    t = {{ sensor_data["humidity"] | safe }};
    setGraphic("#humidity-card", t, {
      "fill": "#3366cc30",
      "line": "#3366cc",
      "line_width": 3,
      "linecap": "round"
    });
  </script>

</body>

</html>